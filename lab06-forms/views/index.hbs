<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    <div class="container">

        <!-- the form is to be submitted to the server, so make sure to surround all your input elements
        inside the <form> tag 
            IF the method is POST then it means we want to create new data (or modify existing one)
            -->
        <form method="POST">
            <div>
                <label>Food Name</label>
                <input type="text" class="form-control" name="foodName" id="foodName"/>
            </div>
            <div>
                <label>Calories</label>
                <input type="text" class="form-control" name="calories" />
            </div>
            <div>
                <label>Meal</label>
                <input type="radio" 
                       class="form-check-inline"
                       name="meal"
                      value="breakfast"
                      id="meal-breakfast"
                      checked
                />
                <label for="meal-breakfast" class="form-check-label">Breakfast</label>

                <input type="radio"
                       class="form-check-inline"
                       name="meal"
                       value="lunch" />
                <label>Lunch</label>

                <input type="radio"
                       class="form-check-inline"
                       name="meal"
                       value="on"
                       />
                <label>Dinner</label>
            </div>
          
            <div>
              <label>Tags</label>

              <input type="checkbox" value="gluten-free" name="tags"/>
              <label>Gluten Free</label>

              <input type="checkbox" value="vegan" name="tags"/>
              <label>Vegan</label>

              <input type="checkbox" value="keto" name="tags"/>
              <label>Keto</label>

              <input type="checkbox" value="unhealthy" name="tags"/>
              <label>Unhealthy</label>
            </div>

            <div>
              <label>Portion</label>
              <select name="portion" class="form-control">
                <option value="large">Large</option>
                <option value="medium">Medium</option>
                <option value="small">Small</option>
              </select>
            </div>

             <input class="mt-3 btn btn-primary" type="submit" value="Submit"/>
        </form>
         
    </div>
  </body>
</html>