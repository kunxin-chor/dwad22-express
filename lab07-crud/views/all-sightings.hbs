
{{#extends "base"}}

{{#block "content"}}
<a class="btn btn-primary" href="/sightings/create">Add New</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Cuisine</th>
            <th>Security</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each sightings}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.cuisine}}</td>
            <td>{{this.security}}</td>
            <td>
              <a href="/sightings/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
              <a href="/sightings/update/{{this.id}}" class="btn btn-primary btn-sm">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}